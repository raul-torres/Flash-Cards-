 @model List<Card>

<head>
    <link rel="stylesheet" href="~/css/Home.css" />
    <link rel="stylesheet" href="~/css/AllCards.css" />
</head>

 <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand font1-2">Flash Cards!</a>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <a href="/logout" class="text-right"><img class="menupic2" src="~/Images/Logout.png" alt="Logout"></a>
                    <a href="/home" class="text-right text-dark"><img class="menupic" src="~/Images/Home.png" alt="Home"></a>
                    <a href="/grouphome/@ViewBag.ThisGroup.GroupId" class="text-right text-dark"><img class="menupic3" src="~/Images/BackArrow.png" alt="Back"></a>
                </div>
            </div>
        </nav>
</header>

<h1 class="text-center display-4">@ViewBag.ThisGroup.Name.ToUpper()</h1>
<hr>

<div class="row">
    @{
        foreach(Card C in Model)
        {
            <div class="jumbotron ThisCard">
                <div class="options">
                    <a href="/deletecard/@C.CardId/@ViewBag.ThisGroup.GroupId"><img class="trashIcon" src="~/Images/Trash.png" alt="Delete"></a>
                    <a href="/editcard/@C.CardId/@ViewBag.ThisGroup.GroupId"><img class="editIcon" src="~/Images/Edit.png" alt="Edit"></a>
                </div>
                <hr>
                <p class="field">QUESTION:</p>
                <p class="response">@C.Question</p>
                <p class="field">ANSWER:</p>
                <p class="response">@C.Answer</p>
            </div>
        }
    }

</div>
